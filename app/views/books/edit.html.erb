<h1>Editing Book</h1>
<%= form_with model:@book, url:book_path(@book.id),method: :patch do |f|%>
<div class="field">
  <%=f.label :book_title,"Title"%><br>
  <%=f.text_field :title%>
</div>
<div class="field">
  <%=f.label :book_body,"Body"%><br>
  <%=f.text_area :body%>
</div>
<div class="action">
  <%=f.submit"Update Book"%> 
</div>

<%=link_to"Show",book_path(@book.id)%>
|
<%=link_to"Back",:back%>

<%end%>