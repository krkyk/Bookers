<h1>Editing Book</h1>
<%if @book.errors.any?%>
<div class="error-message">
  <div class="error-text"><%=@book.errors.count%>errors prohibited this book from being saved:</div>
  <ul>
    <%@book.errors.full_messages.each do |message|%>
    <li><%=message%></li>
    <%end%>
  </ul>
</div>
<%end%>

<%= form_with model:@book, url:book_path(@book.id),method: :patch do |f|%>
<div class="field">
  <%=f.label :book_title,"Title"%><br>
  <%=f.text_field :title%>
</div>
<div class="field">
  <%=f.label :book_body,"Body"%><br>
  <%=f.text_area :body%>
</div>
<div class="action">
  <%=f.submit"Update Book"%> 
</div>

<%=link_to"Show",book_path(@book.id)%>
|
<%=link_to"Back",:back%>

<%end%>