<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <%@books.each do |book|%>
    <tr>
      <td><%= book.title%></td>
      <td><%= book.body%></td>
      <td><%=link_to"Show", book_path(@books.id)%></td>
      <td><%=link_to"Edit", edit_book_path(@books.id)%></td>
      <td><%=link_to"Destroy", book_path(@books.id),method: :delete%></td>
    </tr>
  <%end%>
  </tbody>
</table>
